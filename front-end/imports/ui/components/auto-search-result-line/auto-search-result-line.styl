.os-auto-search-result-line
  cursor: pointer;
  line-height: 1.1;
  font-size: 1.1em;
  padding: 5px 15px;
  margin: 0 auto;
  color: brand-blue 
  border-bottom: 1px solid #e8e8e8;

  &:hover
    background-color: #f2f2f2;
 
  .sm-header-subline 
    display: block;
    margin-bottom: 5px;
   
  .sm-detail-subline
    display: block;
    white-space: nowrap;
    color: spark-grey

.os-auto-search-result-line:last-child
  border-bottom: none;
