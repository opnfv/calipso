.os-data-cubic
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;

  .sm-container 
    display: flex;
    flex-flow: row nowrap;

    .sm-icon-part
      flex: 1;

      .icon-image
        max-height: 42px; // TODO: hotfix
        max-width: 42px; // TODO: hotfix

    .sm-info-part
      flex: 2    

      display: flex;
      flex-flow: column nowrap;
      padding-left: 10px;  // TODO: hotfix
      
      .sm-data-info
        font-size: 12px;

.os-data-cubic.cl-theme-dark
  background-color: dk-gray1

.os-data-cubic.cl-theme-light
  color: spark-blue 
  background-color: #fff
