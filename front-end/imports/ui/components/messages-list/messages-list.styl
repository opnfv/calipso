.messages-summary
  height: 100px;
  background-color: bg-hover-light-grey;
  display: flex;
  .all-main-container
    height: 100%;
    padding-top: 20px;
    margin-top: auto; 
    margin-bottom: auto;
    border-right: 1px solid border-medium-grey!important;
    &:hover
      border-bottom: 4px solid border-action-bottom;
      cursor: pointer
  .total-container
    display: flex
    width: 290px;
    margin-top: auto; 
    margin-bottom: auto;
    margin-right: 50px;
    vertical-align: middle;
    .icon-content
      width: 55px; 
      height: 57px;
      margin-left: 50px;
      margin-right: 28px;

    .messages-all-container
      width: auto;
      .messages-all-number
        margin-top: 10px;
        margin-bottom: 4px;
        font-size: 40px;
        color: text-new-grey;
      .all-messages-text
        font-size: 12px;
        color: text-new-grey;
  .messages-counters-section
    margin-left: 20px;
    height:100%;
    display: flex;
    .info-main-container
      height:100%;
      width: 250px;
      margin-right: 30px;
      padding-top: 25px;
      &:hover
        border-bottom: 4px solid border-action-bottom;
        cursor: pointer
    .info-content-box
      display: flex;
      .info-icon-img
        width:52px;
        height: 52px;
      .info-messages-container
        margin-left: 15px;
        .info-messages-number
          font-size: 40px; 
          color: text-new-grey;
          line-height: 30px;
        .info-messages-text
          color: alarm-yellow-green;
          font-size: 12px;
  .warning-main-container
      height:100%;
      width: 250px;
      margin-right: 30px;
      padding-top: 25px;
      &:hover
        border-bottom: 4px solid border-action-bottom;
        cursor: pointer
    .warning-content-box
      display: flex;
      .warning-icon-img
        width:52px;
        height: 52px;
      .warning-messages-container
        margin-left: 15px;
        .warning-messages-number
          font-size: 40px; 
          color: text-new-grey;
          line-height: 30px;
        .warning-messages-text
          color: alarm-orange;
          font-size: 12px;
  .error-main-container
      height:100%;
      width: 250px;
      margin-right: 30px;
      padding-top: 25px;
      &:hover
        border-bottom: 4px solid border-action-bottom;
        cursor: pointer
    .error-content-box
      display: flex;
      .error-icon-img
        width:52px;
        height: 52px;
      .error-messages-container
        margin-left: 15px;
        .error-messages-number
          font-size: 40px; 
          color: text-new-grey;
          line-height: 30px;
        .error-messages-text
          color: alarm-red;
          font-size: 12px;

.os-messages-list
  display: flex;
  flex-flow: column nowrap;
  margin: 20px;

  .cl-action-icon,
  .card.fa.cl-action-icon
    font-size: 16px !important;

  .sm-messages-table
    th
      color: spark-blue

      a
        color: spark-blue;
        cursor: pointer;
        i.fa
          padding: 0px 3px;
          font-size: small;

    .sm-action-bar
      display: flex;

      a
        color: spark-blue;
        margin: 0px 5px;
        cursor: pointer;

    .cl-action-icon
      color: gray

  .sm-pager-section
    display: flex;
    justify-content: center;

  .cl-link
    cursor: pointer
