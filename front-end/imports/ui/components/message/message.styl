.single-message-box
  padding: 20px;
  margin-top: 67px;
  margin-left: 63px;
  background-color: bg-grey;
  
  .box-header
    text-transform: uppercase;
    font-size: 36px;
    color: text-grey;
    line-height: 30px;
    margin: 20px;

  .cl-field-group
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    padding: 5px 0;

    .cl-field-label
      width: 120px;
      margin: 0 5px;

    .cl-input
      display: block;
      width: 100%;
      min-height: 34px;
      padding: 6px 12px;
      font-size: 14px;
      line-height: 1.42857143;
      color: #555;
      background-color: #fff;
      background-image: none;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
      width: 400px;
      margin: 0 5px;

    .cl-field-desc
      margin: 0 5px;

    input[disabled]
      pointer-events: none

  .js-message-panel
    margin-top: 20px;

  .sm-field-group-display-context
    cursor: pointer; 

